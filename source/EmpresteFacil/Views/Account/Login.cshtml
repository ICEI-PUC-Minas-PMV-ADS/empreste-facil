@model EmpresteFacil.Models.LoginViewModel

<div claclass="container text-center">
	<div class="row justify-content-center align-items-center">

		<div class="col-4">
			<span class="align-middle">
				<img class="img-fluid mx-auto d-block" src="~/images/logo.png" alt="Registrar Usuário">
			</span>
		</div>

		<div class="col-4">
			<h1 class="mb-3">Entrar</h1>
			<form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
				<div asp-validation-summary="All" class="text-danger"></div>
				<input type="hidden" asp-for="ReturnUrl" />

				<div class="form-group mt-2 mb-2">
					<label asp-for="UserName" class="col-md-2 control-label"></label>
					<input asp-for="UserName" class="form-control" />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>

				<div class="form-group mt-2 mb-2">
					<label asp-for="Password" class="col-md-2 control-label"></label>
					<input asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="mt-4">
					<div class="col  btn-group d-grid gap-3" role="group">
						<input type="submit" class="btn btn-outline-success btn-lg" value="Log in" />
						<a class="btn btn-outline-secondary btn-lg" asp-area="" asp-controller="Usuarios" asp-action="Create">Não possui sua conta? Criar conta</a>
					</div>
				</div>

			</form>
		</div>
	</div>
</div>
