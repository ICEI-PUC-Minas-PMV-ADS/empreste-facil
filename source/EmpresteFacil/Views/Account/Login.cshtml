@model LoginViewModel

<table class="container">
	<tr>
		<td><img src="~/images/logo.png" alt="Registrar Usuário"></td>
		<td>
			<div class="row">
				<div class="col-10 col-md-10 col-lg-10">
					<h4>Entrar</h4>
					<form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
						<hr />
						<div asp-validation-summary="All" class="text-danger"></div>
						<input type="hidden" asp-for="ReturnUrl"/>

						<div>
							<label asp-for="UserName" class="col-md-2 control-label"></label>
							<div class="form-group col-md-6">
								<input asp-for="UserName" class="form-control"/>
								<span asp-validation-for="UserName" class="text-danger"></span>
							</div>
						</div>

						<div>
							<label asp-for="Password" class="col-md-2 control-label"></label>
							<div class="form-group col-md-6">
								<input asp-for="Password" class="form-control"/>
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-8 mt-4 btn-group" role="group">
								<input type="submit" class="btn btn-outline-success btn-lg" value="Log in" />
								<a class="btn btn-outline-secondary btn-lg" asp-area="" asp-controller="Account" asp-action="Register">Registrar</a>
							</div>
						</div>

					</form>
				</div>
			</div>
		</td>
	</tr>
</table>